        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="addBookForm">
            <div class="addBookLeft" style="width: 50% !important;">

                <div class="form-group">
                    <div class="col-md-12">
