                        @Html.EditorFor(model => model.bindings_due, new { htmlAttributes = new { @class = "form-control col-md-7 float-right" } })
                        @Html.ValidationMessageFor(model => model.bindings_due, "", new { @class = "text-danger" })
                    </div>
                </div>

