
<style>
    nav{
         float: right;
    position: absolute;
    right: 0;
    margin-right: 0;
    bottom: 79%;
    }
</style>
@{
    int PageId = (int)ViewBag.PageId;
    int PageCount = (int)ViewBag.PageCount;
    string BaseURL = ViewBag.BaseURL;
    var seprator = "/";
    if (BaseURL.Contains("?"))
    {
        seprator = "&pageid=";
    }
    if (PageCount > 1)
    {
        int MaxPageCount = 5;
        int Min = 1;
        int Max = MaxPageCount * 2;
        if (PageId > MaxPageCount)
        {
            Min = PageId - MaxPageCount;
            Max = PageId + MaxPageCount;
        }
        if (Max > PageCount)
        {
            Max = PageCount;
        }
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="my-pagination">
                    <nav aria-label="Page navigation example" >
                        <ul class="pagination justify-content-center site-pageination">
                            @if (PageId > 1)
                            {
                            @*<li><a href="@BaseURL@(seprator)1"><i class="glyphicon glyphicon-chevron-right"></i><i class="glyphicon glyphicon-chevron-right"></i></a></li>
                                <li><a href="@BaseURL@(seprator)@(PageId-1)"><i class="glyphicon glyphicon-chevron-right"></i></a></li>*@
                            <li class="page-item">
                                <a class="page-link" href="@BaseURL@(seprator)@(PageId-1)" aria-label="Previous">
                                    <span aria-hidden="true">«</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>

                            }
                            else
                            {
                            @*<li class="disabled"><span><i class="glyphicon glyphicon-chevron-right"></i><i class="glyphicon glyphicon-chevron-right"></i></span></li>
                                <li class="disabled"><span><i class="glyphicon glyphicon-chevron-right"></i></span></li>*@

                            <li class="page-item disabled">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">«</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            }
                            @for (int i = Min; i <= Max; i++)
                            {
                                if (i == PageId)
                                {
                           
                                     <li class="page-item active"><a class="page-link" href="#">@i</a></li>
                                }
                                else
                                {
                          
                                      <li class="page-item"><a class="page-link" href="@BaseURL@(seprator)@i">@i</a></li>

                                }
                            }
                            @if (PageId < PageCount)
                            {
                            @*<li><a href="@BaseURL@(seprator)@(PageId+1)"><i class="glyphicon glyphicon-chevron-left"></i></a></li>
                                <li><a href="@BaseURL@(seprator)@(PageCount)"><i class="glyphicon glyphicon-chevron-left"></i><i class="glyphicon glyphicon-chevron-left"></i></a></li>*@

                            <li class="page-item">
                                <a class="page-link" href="@BaseURL@(seprator)@(PageId+1)" aria-label="Next">
                                    <span aria-hidden="true">»</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                           
                            }
                            else
                            {
                            @*<li class="disabled"><span><i class="glyphicon glyphicon-chevron-left"></i></span></li>
                                <li class="disabled"><span><i class="glyphicon glyphicon-chevron-left"></i><i class="glyphicon glyphicon-chevron-left"></i></span></li>*@
                            <li class="page-item disabled">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">»</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>




                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>


    }
}

