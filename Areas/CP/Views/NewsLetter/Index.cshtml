@model IEnumerable<LAweightLoss.Models.Subscribe>

@{
    ViewBag.Title = "View Subscriber";
    Layout = "~/Areas/CP/Views/Shared/_Layout.cshtml";
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/CP/Home/">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="/CP/NewsLetter/Index">@ViewBag.Title</a>
            <i class="fa fa-angle-right"></i>
        </li>

    </ul>
    <div class="page-toolbar">
        <div class="btn-group pull-right">

            <a href="/CP/NewsLetter/Send" class="btn btn-success pull-right">
                <i class="fa fa-envelope"></i>
                Send Letter
            </a>

        </div>
    </div>
</div>


<br />
<br />
@if (Model.Count() > 0)
{
    <div class="portlet-body"><table class="table table-striped table-bordered table-hover" id="sample_3">
        <thead>
            <tr>
                <th>#</th>
                <th>
                    Email
                </th>
                <th>
                    subscribeDate
                </th>

            </tr>
        </thead>

        <tbody>

            @{ var i = 0;}
            @foreach (var item in Model)
            {
                i = i + 1;
                <tr>
                    <td>@i</td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Date.ToString("yyyy/MM/dd")
                    </td>
                </tr>
            }
        </tbody>

    </table></div>
}
else
{
    <div class="alert alert-info">
        There is no data to display

    </div>
}


@Html.Partial("_paging")
